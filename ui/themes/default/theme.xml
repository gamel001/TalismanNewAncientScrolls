		  <Button Inherit="" Location="222,134,300,500" Name="TemplateButtonAsTitleBar">
              <Scripts>
			    <OnLDown>
				  local x, y = uiGetWidgetRect(self);
				  self:Set("MouseOffset", {x = mouse_x - x, y = mouse_y - y});
				</OnLDown>
	            <OnMouseMove>
		          if self:IsCaptured() then
					local target = self:Get("TARGET");
					local allowX = self:Get("ALLOW_X");
					local allowY = self:Get("ALLOW_Y");
					if not target then uiError("[Theme.xml:TemplateButtonResizeForm]:NoTarget error!!!"); return; end
					if target == "$parent" then
						target = SAPI.GetParent(self);
					else
						target = uiGetglobal(target);
					end
					if not target then uiError("[Theme.xml:TemplateButtonResizeForm]:NoTarget error!!!"); return; end
				    local x, y = uiGetWidgetRect(self);
				    local offset = self:Get("MouseOffset");
					local _x = mouse_x - (x + offset.x);
					local _y = mouse_y - (y + offset.y);
					if not allowX then		_x = 0;		end
					if not allowY then		_y = 0;		end
		            target:MoveTo_Offset(_x, _y);
		          end
		        </OnMouseMove>
			  </Scripts>
		  </Button>
		  <Button Inherit="" Location="222,134,300,500" Name="TemplateButtonResizeForm">
              <Scripts>
			    <OnLDown>
				  local x, y = uiGetWidgetRect(self);
				  self:Set("MouseOffset", {x = mouse_x - x, y = mouse_y - y});
				</OnLDown>
	            <OnMouseMove>
		          if self:IsCaptured() then
					local ResizeType = self:Get("ResizeButtonType");
				    local target = ResizeType.Target;
					if not target then uiError("[Theme.xml:TemplateButtonResizeForm]:NoTarget error!!!"); return; end
					target = uiGetglobal(target);
					if not target then uiError("[Theme.xml:TemplateButtonResizeForm]:NoTarget error!!!"); return; end
				    local x, y = uiGetWidgetRect(self);
				    local offset = self:Get("MouseOffset");
					local _x = mouse_x - (x + offset.x);
					local _y = mouse_y - (y + offset.y);
					local _w = 0;
					local _h = 0;
					if ResizeType.Left then					_w = -_x;
					elseif ResizeType.Right then			_w =  _x;	_x = 0;
					else									_w =   0;	_x = 0;
					end
					if ResizeType.Top then					_h = -_y;
					elseif ResizeType.Bottom then			_h =  _y;	_y = 0;
					else									_h =   0;	_y = 0;
					end
		            target:MoveSize_Offset(_x, _y, _w, _h);
		          end
		        </OnMouseMove>
			  </Scripts>
		  </Button>
